@model IEnumerable<PeaceOfMind.Models.Job.JobListItem>

@{
    ViewBag.Title = "Today";
}

<div class="row jobContainer">
    <div class="col-md-2 sidebar">
        <ul class="nav">
            <li>@Html.ActionLink("New Job", "Create")</li>
            <li>@Html.ActionLink("All Jobs", "Index")</li>
        </ul>
    </div>
    @if (Model.Count() != 0)
    {
        <div class="col-md-10" style="padding: 10px 0 0 30px">
            <h2>Schedule for @DateTime.Now.ToString("M")</h2>

            <hr />

                @foreach (var item in Model)
                {
                    <h4><span>@item.StartTime - @item.Service</span></h4>
                }
        </div>
    }
    @if (Model.Count() == 0)
    {
        <div class="col-md-10" style="padding: 10px 0 0 30px">
            <h2>There are no jobs scheduled for today.</h2>

        </div>

    }
</div>


