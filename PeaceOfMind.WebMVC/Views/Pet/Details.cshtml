@model PeaceOfMind.Models.Pet.PetDetail

@{
    ViewBag.Title = "Details";
}

<div class="row jobContainer">
    <div class="col-md-2 sidebar">
        <ul class="nav">
            <li>@Html.ActionLink("New Pet", "Create")</li>
            <li>@Html.ActionLink("All Pets", "Index")</li>
            <li><a href="#">Search</a></li>
        </ul>
    </div>

    <div class="col-md-10">
        <h2 class="text-center">Pet Details</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TypeOfPet)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TypeOfPet)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Owner)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Owner)
            </dd>

        </dl>
        <div class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.PetId }, htmlAttributes: new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.PetId }, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    </div>
    </div>
